// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 30, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 6, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "hyprland/window",
        "hyprland/submap"
    ],
    "modules-center": [
        "pulseaudio",
        "mpris",
        "hyprland/workspaces",
        "clock",
        "pulseaudio/slider"
    ],
    "modules-right": [
        "tray",
	"backlight",
        "idle_inhibitor",
        "power-profiles-daemon",
        "bluetooth",
        "network",
	"custom/notification",
        "battery",
        "custom/power"
    ],
    // Modules configuration
    "hyprland/workspaces": {
        "all-outputs": true,
        "active-only": false,
        "persistent-workspaces": {
            "*": 10
        },
        "format": "{name} {icon}",
        "format-icons": {
            "active": "Û∞ªÉ",
            "default": " "
        }
    },
    "hyprland/window": {
        "format": "üëâ {}",
        "separate-outputs": true
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "hyprland/submap": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": [
            "",
            "Ôãí"
        ],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "idle_inhibitor": {
        "format": "{icon}",
	"format-icons": {
		"activated": "Û∞êØ ",
		"deactivated": "Û±†ç "
	},
        "tooltip": true,
        "tooltip-format-activated": "Presentation Mode",
        "tooltip-format-deactivated": "Idle Mode",
        "start-activated": false
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        //"timezone": "Europe/Madrid",
        "format": "{:%A, %B %d, %Y | %R} Û±ëÜ ",
        "format-alt": "{:%H:%M} Û±ëÜ ",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        }
    },
    "cpu": {
        "format": "{usage}% Ôãõ ",
        "tooltip": false
    },
    "memory": {
        "format": "{}% ÔÉâ "
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": [
            "Ôù´",
            "Ôãâ",
            "Ôù©"
        ]
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": " {percent}% {icon} ",
        "format-icons": [
            "Óéç",
            "Óèì",
            "Óèë",
            "Óèè",
            "Óèé",
            "Óèç",
            "Óèä",
            "Óèà",
            "Óéõ"
        ]
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon} ",
        "format-full": "{capacity}% {icon} ",
        "format-charging": "{capacity}% Ôóß ",
        "format-plugged": "{capacity}% Ôá¶ ",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": [
            "ÔâÑ",
            "ÔâÉ",
            "ÔâÇ",
            "ÔâÅ",
            "ÔâÄ"
        ]
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß",
            "balanced": "Ôâé",
            "power-saver": "ÔÅ¨"
        }
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "Ôá´ ",
        "on-click": "nm-connection-editor",
        "tooltip-format": "{essid} ({signalStrength}%)\n{ifname} via {gwaddr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "‚ö†"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume} {icon}  {format_source}",
        "format-muted": " Ôö© {format_source} ",
        "format-source": " {volume} ÔÑ∞ ",
        "format-source-muted": " ÔÑ± ",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": [
                "ÔÄ¶",
                "ÔÄß",
                "ÔÄ®"
            ]
        },
        "on-click": "pavucontrol"
    },
    "pulseaudio/slider": {
        "min": 0,
        "max": 100,
        "orientation": "horizontal"
    },
    "custom/pipewire": {
        "format": "{icon}",
        "return-type": "json",
        "signal": 8,
        "interval": "once",
        "format-icons": {
            "mute": "Ôö©",
            "default": [
                "ÔÄ¶",
                "ÔÄß",
                "Ôö®",
                "ÔÄ®"
            ]
        },
        "exec": "pw-volume status"
    },
    "mpris": {
        "title-len": 15,
        "artist-len": 15,
        "format": "{player_icon} {status}: {title} - {artist}",
        "format-paused": "{status_icon} {status}: {title} - {artist}",
        "player-icons": {
            "default": "üéµ",
            "spotify": "ÔÜº"
        },
        "status-icons": {
            "paused": "Ôäå"
        }
        // "ignored-players": ["firefox"]
    },
    "bluetooth": {
        "format": "Ôäî",
        "on-click": "blueberry",
        "format-connected-battery": "Ôäî {device_alias} {device_battery_percentage}%",
        "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%"
    },
    "custom/power": {
        "format": "Û∞£á ",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
        "menu-actions": {
            "shutdown": "shutdown now ",
            "reboot": "reboot"
        }
    },
    "custom/notification" : {
  		"tooltip" : false,
  		"format" : "{} {icon} ",
  		"format-icons" : {
    			"notification" : "Û±Ö´",
    			"none" : "ÔÉ≥",
    			"dnd-notification" : "Ôá∂ ",
    			"dnd-none" : "Û∞Çõ",
    			"inhibited-notification": "ÔÇ¢ ",
    			"inhibited-none": "ÔÇ¢",
    			"dnd-inhibited-notification": "Ôá∑ ",
    			"dnd-inhibited-none": "Ôá∑ "
  		},
  		"return-type": "json",
  		"exec-if" : "which swaync-client",
  		"exec" : "swaync-client -swb",
  		"on-click" : "sleep 0.1 && swaync-client -t -sw",
  		"on-click-right" : "sleep 0.1 && swaync-client -d -sw",
  		"escape": true
	}
}

